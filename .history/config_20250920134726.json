{
  "exclude_dirs": [
    ".git",
    ".svn",
    "node_modules",
    "__pycache__",
    ".pytest_cache",
    ".cache",
    "tmp",
    "temp",
    "logs",
    "log"
  ],
  "exclude_files": [
    ".DS_Store",
    "Thumbs.db",
    "desktop.ini",
    "*.tmp",
    "*.swp",
    "*.swo",
    "*~"
  ],
  "max_file_size": 104857600,
  "follow_symlinks": false,
  "log_level": "INFO",
  "output_format": "json",
  "output_file": null,
  "risk_thresholds": {
    "high": ["suid", "sgid", "world_writable"],
    "medium": ["non_owner_writable", "group_writable"],
    "low": ["other_issues", "executable_not_readable"]
  },
  "scan_options": {
    "check_suid": true,
    "check_sgid": true,
    "check_world_writable": true,
    "check_non_owner_writable": true,
    "check_other_permissions": true,
    "include_hidden_files": true,
    "include_system_files": false
  },
  "reporting": {
    "include_file_contents": false,
    "max_issues_per_file": 10,
    "group_by_risk_level": true,
    "sort_by": "risk_level"
  }
}
